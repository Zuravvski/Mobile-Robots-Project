<UserControl x:Class="robotymobilne_projekt.GUI.Views.Settings.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/GUI/Views/Settings/General.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Genaral" Source="/GUI/Views/Settings/General.xaml" />
                <mui:Link DisplayName="Target device settings" Source="/GUI/Views/Settings/TargetDeviceSettings.xaml" />
                <mui:Link DisplayName="Appearance" Source="/GUI/Views/Settings/Appearance.xaml" />
                <mui:Link DisplayName="About" Source="/GUI/Views/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
