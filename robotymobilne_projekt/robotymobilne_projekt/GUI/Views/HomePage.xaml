<UserControl x:Class="robotymobilne_projekt.GUI.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" Width="654.8">
    <Grid>
        <Viewbox>
            <ItemsControl>
                <Image x:Name="home_background" Height="400" Source="/robotymobilne_projekt;component/background2.jpg" Width="1280">
                    <Image.OpacityMask>
                        <RadialGradientBrush >
                            <GradientStop Color="Black" Offset="0.2"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Image.OpacityMask>
                </Image>
            </ItemsControl>
        </Viewbox>
        <Label x:Name="label" Content="Welcome to our Pololu 3π controller!" HorizontalAlignment="Left" Margin="11,14,0,0" VerticalAlignment="Top" Width="625" Height="34"/>

    </Grid>
</UserControl>
