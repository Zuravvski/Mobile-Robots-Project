<UserControl x:Class="robotymobilne_projekt.GUI.Views.CoverPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:robotymobilne_projekt.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="coverPane">
        <Grid.Background>
            <SolidColorBrush Color="Gray" Opacity="0.25" />
        </Grid.Background>
        <Button x:Name="button" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Center" Foreground="White" RenderTransformOrigin="0.5,0" Click="button_Click">
            <TextBlock Text="..." TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" TextWrapping="WrapWithOverflow" Text="TextBlock" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
