<UserControl x:Class="MobileRobots.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" Width="654.8">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Welcome to Pololu 3π robot controller!" Style="{StaticResource Heading2}" />
                <TextBlock Text="Use the navigation bar above to go to desired section." />
                <TextBlock Text="Remember to connect to proper WiFi network (RobotyMobilne)." />
                <TextBlock Text="*Please note that this is still alpha version and not all the options are available for this moment." FontSize="11"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
