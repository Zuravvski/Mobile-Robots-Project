<mui:ModernWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        x:Class="robotymobilne_projekt.GUI.MainWindow"
        Title="Pololu 3π controller" IsTitleVisible="True"
        ContentSource="/GUI/Views/HomePage.xaml"
        xmlns:converters="clr-namespace:robotymobilne_projekt.GUI.Converters"
        Icon="/Resources/Robot.ico"
        MinHeight="480" MinWidth="640"
        Keyboard.PreviewKeyDown="ModernWindow_PreviewKeyDown"
        x:Name="mainWindow">
    
    <mui:ModernWindow.Resources>
        <converters:AppModeToIconConverter x:Key="appToIcon"/>
    </mui:ModernWindow.Resources>

    <mui:ModernWindow.LogoData>
        <Binding ElementName="mainWindow" Path="DataContext.AppMode" Converter="{StaticResource appToIcon}" Mode="OneWay"/>
    </mui:ModernWindow.LogoData>

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Home">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="" Source="/GUI/Views/HomePage.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Manual">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName = "" Source = "/GUI/Views/Manual/ManualView.xaml"/>
            </mui:LinkGroup.Links>
        </mui:LinkGroup>

        <mui:LinkGroup DisplayName="Automatic">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="" Source="/GUI/Views/Automatic/AutomaticView.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Settings" GroupKey="settings">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="" Source="/GUI/Views/Settings/SettingsPage.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>

    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="settings" Source="/GUI/Views/Settings/SettingsPage.xaml" />
        <mui:Link DisplayName="help" Source="https://github.com/Zuravvski/Roboty-Mobilne" />
    </mui:ModernWindow.TitleLinks>
</mui:ModernWindow>

